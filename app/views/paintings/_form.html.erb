<%= simple_form_for(@painting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :gallery_id, :as => :hidden, :input_html => { :value => params[:gallery_id] } %>
    <%= f.input :name %>
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Proses" %>
  </div>
<% end %>
